<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>periodicalWeb</display-name>
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.nine.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.nine.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>InitServlet</servlet-name>
    <servlet-class>com.nine.servlet.InitServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <context-param>
    <param-name>sql_dialect</param-name>
    <param-value>mysql</param-value>
  </context-param>
  <context-param>
    <param-name>data_source</param-name>
    <param-value>periodicaldb</param-value>
  </context-param>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.nine.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.nine.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logoutServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserpageServlet</servlet-name>
    <servlet-class>com.nine.servlet.UserpageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserpageServlet</servlet-name>
    <url-pattern>/user/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ManagerpageServlet</servlet-name>
    <servlet-class>com.nine.servlet.ManagerpageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ManagerpageServlet</servlet-name>
    <url-pattern>/manager/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BosspageServlet</servlet-name>
    <servlet-class>com.nine.servlet.BosspageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BosspageServlet</servlet-name>
    <url-pattern>/boss/*</url-pattern>
  </servlet-mapping>
</web-app>